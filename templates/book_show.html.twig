{# J'ETEND LA "basse.html.twig" POUR RECUPERER LA STRUCTURE COMMUNE#}
{% extends 'base.html.twig' %}

{# JE DEFINIS LE CONTENU SPECIFIQUE DE MON "block book_show"#}
{% block book_show %}

    <div class="book_show">
        {# DECLARATION DE LA VARIABLE "author.lastname" POUR RECUPERER LES LASTNAME DE MA BASE DE DONNEE#}
        <h2>{{ book.title }}</h2>

        {# DECLARATION DE LA VARIABLE "author.firstname" POUR RECUPERER LES FIRSTNAME DE MA BASE DE DONNEE#}
        <h3>{{ book.nbPages }} pages</h3>

        {# DECLARATION DE LA VARIABLE "author.birthdate" POUR RECUPERER LA DATE DE NAISSANCE DE MA BASE DE DONNEE#}
        <p>Genre : {{ book.genre }}</p>
    </div>
    <a href="{{ path('books_list') }}" class="button">Retour</a>

{% endblock book_show %}